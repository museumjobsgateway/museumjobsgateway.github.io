.nav

  &__layer
    background-color white
    position absolute
    top 0
    left 0
    width 100vw
    z-index 1

  &__container
    //border-bottom 1px solid white
    display flex
    align-items center
    justify-content space-between
    margin 0
    //padding 0 2rem
    max-width 100%
    //font-size 1rem

  &__heading
    color indigo
    line-height 1.5
    text-shadow none
    text-transform uppercase
    font-size 1.2rem

    span
      font-weight: Condensed.weight.bold

    a
      display block
      padding .5rem 1rem

      &:hover
        background-color indigo
        color white

  &__links
    display flex
    align-items center
    justify-content center

    a
      display block
      font-family: Condensed.font
      font-size 1.2rem
      color indigo
      display inline-block
      font-weight 400
      padding .5rem 1rem

      &:hover
        background-color indigo
        color white
