.stats
  &__layer
    // background-attachment fixed
    // background-image url(img/museum-bw.jpg), linear-gradient(135deg, #0fc, indigo)
    // background-blend-mode overlay
    // background-repeat no-repeat
    // background-size cover
    //height 100vh

  &__container
    display flex
    flex-direction column
    align-items center
    justify-content center
    height 100vh
    //padding 5rem 0
    max-width 100vw
    overflow hidden

    &:nth-of-type(1)
      background-color indigo
      height auto
    &:nth-of-type(2)
      background-color lighten(indigo, 5%)
    &:nth-of-type(3)
      background-color lighten(indigo, 10%)
    &:nth-of-type(4)
      background-color lighten(indigo, 15%)
    &:nth-of-type(5)
      background-color lighten(indigo, 20%)

      .stats__subheading
        +below(660px)
          font-size 1rem

    &:nth-of-type(odd)
      .stats__box
        flex-direction row-reverse
        transform translateX(-20%)
        will-change transform

        +below(660px)
          flex-direction column

        &.move
          transform translateX(0)

        .stats__subheading
          text-align right

          +below(660px)
            text-align left

  &__heading
    padding 5rem 0

    +below(660px)
      padding 5rem 1rem

  &__number
    font-size 5rem
    text-align center

    +below(660px)
      font-size 2.5rem

  &__subheading
    flex 2
    padding 0 2rem
    text-align left
    max-width 800px
    opacity 0
    transition opacity 3s
    will-change transform

    +below(660px)
      padding 2rem 1rem

    &.reveal
      opacity 1

  &__box
    align-items center
    justify-content center
    display flex
    padding 0 5rem
    transform translateX(20%)
    transition transform 1.5s ease-in-out

    +below(660px)
      flex-direction column

    &.move
      transform translateX(0)

.frame-border
  position relative
  box-shadow 0 30px 36px rgba(0, 0, 0, 0.5)
  border 11px solid #ededed
  width 400px
  //max-width 25rem
  //height 547px
  +below(660px)
    width 300px

.frame-inset
  box-shadow inset 0 1px 5px rgba(0, 0, 0, 0.5)
  background-color #EEFF41  //#bebebe
  border 32px solid #f5f5f5
  max-width 100%
  max-height 100%
  padding 1.5rem 0

  &:before
    content: ''
    display block
    position absolute
    top 0
    left 0
    z-index 999
    width 100%
    height 100%
    box-shadow inset 0 20px 20px rgba(0, 0, 0, 0.3)

.dataSource
  color cyan
  font-size .8rem
  text-shadow none

  &:before
    content: '- '
