.jobs
  &__layer
    // background-color yellow
    // background-attachment fixed
    background-image url(img/people2.png)
    // background-blend-mode overlay
    background-repeat no-repeat
    background-size cover
    height 100vh
    position relative

  &__container
    display flex
    flex-direction column
    align-items center
    justify-content center
    height 100vh
    width 60vw

  &__card
    background-color white
    box-shadow 0 10px 6px -6px charcoal;
    padding 3rem

  &__heading
    color indigo
    font-size 4rem

  &__subheading
    color charcoal
    padding 2rem
    line-height 1
    text-shadow none

  &__content
    color charcoal
    text-align center
