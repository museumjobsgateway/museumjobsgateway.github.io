.gallery
  &__layer
    background-color indigo
    // background-attachment fixed
    // background-image url(img/people2.png)
    // background-blend-mode overlay
    // background-repeat no-repeat
    // background-size cover
    // height 100vh
    // position relative

  &__container
    display flex
    flex-direction column
    align-items center
    justify-content center
    height 100vh
    width 60vw

  &__gallery
    display flex
    flex-flow row wrap
    width 100%

    a
      background-size cover
      border 10px solid white
      color white
      display block
      height 300px
      width calc(50% - 2rem)
      margin 1rem

      &:nth-of-type(1)
        background-image url(img/youth-bw.jpg)
      &:nth-of-type(2)
        background-image url(img/parents-bw.jpg)
      &:nth-of-type(3)
        background-image url(img/teachers-bw.jpg)
      &:nth-of-type(4)
        background-image url(img/counselors-bw.jpg)

  &__heading
    // color indigo
    font-size 4rem

  &__subheading
    color charcoal
    padding 2rem
    line-height 1
    text-shadow none

  &__content
    color charcoal
    text-align center
